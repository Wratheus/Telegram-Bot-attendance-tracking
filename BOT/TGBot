from telegram.ext import Updater, CommandHandler
import logging
updater = Updater(token='USE_YOUR_TOKEN', use_context=True) #Эта строка нужна, чтобы получать обновления от телеграмма, доставлять их по токену
logging.basicConfig(format='%(asctime)s - %(name)s - %(levelname)s - %(message)s', level=logging.INFO) #Эта строка нужна, чтобы если что-то пошло не так, мы бы получили мини-отчет
dispatcher = updater.dispatcher

def start(update, context):
    context.bot.send_message(chat_id=update.effective_chat.id, text="Let's get it on, baby") # функция, которая отвечает за отправку сообщения при написании боту /start

start_handler = CommandHandler('start', start) #Обработчик запроса

dispatcher.add_handler(start_handler) # add_handler( обработчик: telegram.ext.handler.Handler)

updater.start_polling() # запуск бота
